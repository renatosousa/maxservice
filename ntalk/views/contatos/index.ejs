<% include ../header %>
	<header>
		<h1>Ntalk</h1>
		<h4>Cadastrar contato.</h4>
	</header>
	<section>
		<form action="/contato" method="post">
			<input type="text" name="contato[nome]" placeholder="Digite um nome.">
			<br>
			<input type="text" name="contato[email]" placeholder="Digite um e-mail.">
			<br>
			<button type="submit">cadastrar</button>
		</form>
		<table align="center">
			<thead>
				<tr>
					<th>Nome</th>
					<th>E-mail</th>
					<th>Ação</th>
				</tr>
			</thead>
			<tbody border="1">
				<% contatos.forEach(function(contato, index) { %>
					<tr>
						<td><%- contato.nome %></td>
						<td><%- contato.email %></td>
						<td>
							<a href='/contato/<%-index%>'>detalhes</a>
							<a href='/chat'>conversar</a>
						</td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	</section>
	<% include ../exit %>
<% include ../footer %>